<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/email_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_bg"
            android:gravity="center"
            tools:text="F"/>

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/darker_gray"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/email_icon"
            android:layout_alignTop="@id/email_icon"
            android:layout_toStartOf="@id/date"
            tools:text="Facebook"/>

        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darker_gray"
            android:singleLine="true"
            android:layout_below="@id/user"
            android:layout_alignStart="@id/user"
            android:ellipsize="marquee"
            tools:text="Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook"/>


        <TextView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/darker_gray"
            android:singleLine="true"
            android:layout_below="@id/subject"
            android:layout_alignStart="@id/user"
            android:ellipsize="marquee"
            android:layout_marginEnd="24dp"
            tools:text="PREVIEW PREVIEW PREVIEW "/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darker_gray"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            tools:text="20 de Maio"/>

        <ImageView
            android:id="@+id/img_star"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="24dp"
            android:src="@drawable/ic_star_border_black_24dp"
            android:layout_height="24dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>